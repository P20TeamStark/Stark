@model rentMyJunk.Models.Item

@{
    ViewBag.Title = "Post your Junk";
}

<h2>Post your Junk</h2>

@{
    List<SelectListItem> categoryTypes = new List<SelectListItem>
    {
        new SelectListItem
        {
            Text = "Tools",
            Value = "Tools"
        },
        new SelectListItem
        {
            Text = "Equipment",
            Value = "Equipment",
            Selected = true
        },
        new SelectListItem
        {
            Text = "Houseware",
            Value = "Houseware"
        },
        new SelectListItem
        {
            Text = "Recreational",
            Value = "Recreational"
        },
        new SelectListItem
        {
            Text = "Vehicles",
            Value = "Vehicles",
            Selected = true
        },
        new SelectListItem
        {
            Text = "Electronics",
            Value = "Electronics"
        }
    };
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Description</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Category</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.category, categoryTypes, "-- Select Category --") 
            </div>
        </div>    

        <div class="form-group">
            <div class="control-label col-md-2">Available?</div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.isAvailable)
                    @Html.ValidationMessageFor(model => model.isAvailable, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Rate per day</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ratePerDay, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ratePerDay, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Post it!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
