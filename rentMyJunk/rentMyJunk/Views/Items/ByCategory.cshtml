@model IEnumerable<rentMyJunk.Models.Item>

@{
    ViewBag.Title = "Items By Category";
}


<h2>All the availabel Junk</h2>
<hr/>
<div class="row">
    <div class="col-md-4 col-md-offset-3">
        @Html.ActionLink("Add more Junk", "Create")
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageUri)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ownerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAvailable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imageUri)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ownerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isAvailable)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
